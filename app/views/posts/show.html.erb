<p id="notice"><%= notice %></p>

<p>
  <h3>Name:</h3>
  <%= @post.name %>
  <h3>Content:</h3>
  <%= @post.content %>
  <h3>Tags:</h3>
  <ul>
    <% @post.tags.each do |tag| %>
    <li><%= tag.name %></li>
    <% end %>
  </ul>
</p>
<h3>Create a New Post with A New Tag</h3>
<%= form_for @post.tags.build do |tag| %>
<%= tag.hidden_field :post_id, value @post.id%>
<%= tag.label :name %>
<%= tag.text_field :name %>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
